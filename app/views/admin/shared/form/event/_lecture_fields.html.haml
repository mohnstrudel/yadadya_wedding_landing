.lecture_row
  
  .form-group
    %label.col-sm-2.control-label
      Заголовок доклада
    .col-sm-10
      =f.text_field :title, class: 'form-control'
  .hr-line-dashed

  .form-group
    %label.col-sm-2.control-label
      Описание доклада
    .col-sm-10
      =f.text_area :description, class: 'form-control', rows: 4
  .hr-line-dashed

  .form-group
    %label.col-sm-2.control-label
      Время проведения
    .col-sm-10
      =f.text_field :timeframe, class: 'form-control'
      %span.help-block.m-b-none Например: 10:00 - 12:00
  .hr-line-dashed

  .form-group
    %label.col-sm-2.control-label
      Спикер
    .col-sm-10
      =f.collection_select(:speaker_ids, Speaker.all, :id, :first_name, { include_blank: "Выбрать спикера" }, class: 'form-control select2_speakers')
    

  
  .form-group 
    %span.input-group-btn.text-right
      =f.hidden_field :_destroy
      =link_to "Удалить доклад", "#", class: "remove_event_record btn btn-danger"
